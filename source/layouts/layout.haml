%html.no-js
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    /%meta{ name: 'author', content: @view[:author] }/
    /%meta{ name: 'description', content: @view[:description] }/
    /%meta{ name: 'keywords', content: @view[:tags] }/
    /%meta{ name: 'created', content: @view[:created] }/
    %meta{:content => "width=device-width", :name => "viewport"}
    /%meta{ name: 'author', content: @view[:author] }/
    /%meta{ name: 'description', content: @view[:description] }/
    /%meta{ name: 'keywords', content: @view[:tags] }/
    /%meta{ name: 'created', content: @view[:created] }/
    /%link{ href: '/mobile.css', rel: 'stylesheet', type: 'text/css', media: 'handheld' }/
    /%link{ href: 'http://fonts.googleapis.com/css?family=Droid+Sans|Droid+Serif|Droid+Sans+Mono', rel: 'stylesheet', type: 'text/css' }/

    / Included CSS Files
    :css
        @font-face {
        font-family: 'Hardwood';
        src: url('assets/images/fonts/hardwoodlpstd-webfont.eot');
        src: url('assets/images/fonts/hardwoodlpstd-webfont.eot?#iefix') format('embedded-opentype'),
        url('assets/images/fonts/hardwoodlpstd-webfont.woff') format('woff'),
        url('assets/images/fonts/hardwoodlpstd-webfont.ttf') format('truetype'),
        url('assets/images/fonts/hardwoodlpstd-webfont.svg#hardwood_lp_stdregular') format('svg');
        font-weight: 800;
        font-style: normal;
        }

    = stylesheet_link_tag "foundation"

    :css
        @font-face {
        font-family: 'fontello';
        src: url('assets/images/fonts/fontello.eot?95464272');
        src: url('assets/images/fonts/fontello.eot?95464272#iefix') format('embedded-opentype'),
        url('assets/images/fonts/fontello.woff?95464272') format('woff'),
        url('assets/fonts/fontello.ttf?95464272') format('truetype'),
        url('assets/fonts/fontello.svg?95464272#fontello') format('svg');
        font-weight: normal;
        font-style: normal;
        }
    

    -#Favicon Options:
    -#Update favicon_base.png in /source and middleman-favicon-maker will generate all the versions you need on 'middleman build'
    -#OR, place favicon.ico and apple-touch-icon.png in /source and deactivate :favicon_maker in config.rb

    %title= data.page.title || "ZURB Foundation"
    
    -#Javascript
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js'
    = javascript_include_tag "vendor/custom.modernizr.js"  
    = javascript_include_tag "jquery"

  %body{:class => page_classes}
    %header
      /= render :partial => 'nav_bar'
      = partial 'nav_bar'
    %section{:role => "main", :class => "main"}= yield
    %footer
      = partial 'footer'
    -# Application Javascript, safe to override

    :javascript
      document.write('<script src=/js/vendor/'
        + ('__proto__' in {} ? 'zepto' : 'jquery')
        + '.js><\/script>');

    = javascript_include_tag "foundation.min.js"
    = javascript_include_tag "jquery.pageslide.min.js"

    :javascript
      $(".open").pageslide();

    :javascript
      $(document).foundation();

    -# Google Analytics
    = javascript_include_tag "google_analytics"