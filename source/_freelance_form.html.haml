#freeForm.reveal-modal.large 
  %form
    %fieldset
      %legend Freelance Hire Contact Form
      .row
        .large-4.columns
          %label First Name
          %input{type: "text"}/
        .large-4.columns
          %label Last Name
          %input{type: "text"}/
        .large-4.columns
          %label{for: "customDropdown1"} Primary Freelance Work Needed
          %select#customDropdown1.medium
            %option{disabled: "disabled"} Please Pick One
            %option New Website
            %option Upgrade/Mobile Website
            %option Graphic Design/Advertisment
            %option Blog Syndication
      .row
        .large-4.columns
          %label Phone
          %input{type: "text"}/
        .large-4.columns
          .row.collapse
            %label Email
            .small-9.columns
              %input{type: "text"}/
            .small-3.columns
              %span.postfix .com
        .large-4.columns
          %label Current Website (If Applicable)
          %input{type: "text"}/
        
      .row
        .large-12.columns
          %label Description of Freelance Work Needed
          %textarea{}
          /%textarea{placeholder: "Start Writing Here"}
